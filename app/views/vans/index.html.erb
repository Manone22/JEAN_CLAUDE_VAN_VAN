<%= render "shared/searchbar" %>
<div class="main-container">
  <h1>Liste des vans disponibles :</h1>

  <div class="index-container">
    <div class="row cards-container">
      <div class="cards">
        <% @vans.each do |van| %>
          <%= link_to van_path(van) do %>
            <div class="card-trip">
              <img src="<%= van.image_url %>"/>
              <div class="card-trip-infos">
                <div>
                  <h2><%= van.name %></h2>
                  <p><%= van.description %></p>
                  <p>Lieu de location : <%= van.location %></p>
                  <p>Places: <%= van.seat %></p>
                  <!-- <p>Disponibilité: <%= van.date %></p> -->
                </div>
                  <h2 class="card-trip-pricing"><%= van.price %>€/jour</h2>
                  <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to "Revenir à l'accueil", root_path %>
</div>

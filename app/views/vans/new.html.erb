<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1> Loues ton van</h1> <!-- users == owners -->
        <%= simple_form_for (@van) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :date %>
        <%= f.input :price %>
        <%= f.input :seat %>
        <%= f.input :location %>
        <%= f.input :image_url %>
        <%= f.submit "Ajoutes", class: 'btn btn-primary' %>
        <% end %>
        <br>
      <%= link_to 'retour', vans_path, class: 'btn btn-warning btn-sm' %>
    </div>
  </div>
</div>
